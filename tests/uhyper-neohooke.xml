<MMLSpec>
  <!-- {E=500} -->
  <!-- {NU=.45} -->
  <!-- {C10=E/(4.*(1.+NU))} -->
  <!-- {D1=6*(1.-2.*NU)/E} -->
  <Physics driver="solid" termination_time="{1.8 * pi}">
    <Function id="2" type="analytic_expression" var="t">
      sin(t)
    </Function>
    <Function id="3" type="piecewise_linear">
      0. 2.
      1. 3.
      2. 4.
    </Function>
    <Path type="prdef" kappa="0" tstar="1" amplitude="1" nfac="200"
	  estar=".2">
      <!-- termination time, number of steps, control, Cij -->
      0 0 222222 0 0 0 0 0 0
      3 1 244222 1 0 0 0 0 0
    </Path>

    <Material model="uhyper" constants="2"
	      source="uhyper.f90"
	      source_directory="{ROOT_D}/materials/library/abaumats">
      <Constants> {C10} {D1} </Constants>
    </Material>

  </Physics>

</MMLSpec>
