#!/usr/bin/env gmd
<GMDSpec>

  <!-- {K = 10.e9} -->
  <!-- {G = 3.75e9} -->

  <Physics driver="solid" termination_time="{1.8 * pi}">

    <Function id="2" type="analytic expression" var="t">
      sin(t)
    </Function>

    <Function id="3" type="piecewise linear">
      0. 2.
      1. 3.
      2. 4.
    </Function>

    <Path type="prdef" kappa="0" tstar="1" amplitude="1" format="fcnspec"
	  cfmt="222" nfac="200">
      <!-- termination time, number of steps, control, Cij -->
      {2 * pi} 2:1.e-1 0 0
    </Path>

    <Material density="5" model="elastic">
      <K> {K} </K>
      <G> {G} </G>
    </Material>

    <Extract format="ascii" step="1" ffmt="12.6E">
      stress strain
    </Extract>

  </Physics>

</GMDSpec>
