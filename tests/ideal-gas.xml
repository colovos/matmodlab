<GMDSpec>

  <Physics driver="eos">

    <Units input="SI" output="SI"/>

    <Material model="ideal_gas">
      <!-- He -->
      <M> 4.00260 </M>
      <CV> 1.5 </CV>
    </Material>

    <Surface increments="10">
      <DensityRange> (1, 100) </DensityRange>
      <TemperatureRange> (5, 300) </TemperatureRange>
    </Surface>

    <Path type="hugoniot" increments="100">
      <DensityRange> (1, 100) </DensityRange>
      <InitialTemperature> 100 </InitialTemperature>
    </Path>

    <Path type="isotherm" increments="200">
      <DensityRange> (1, 100) </DensityRange>
      <InitialTemperature> 225 </InitialTemperature>
    </Path>

    <Path type="prstate">
      <!-- control 1: rho, 2: temp -->
      12 1 100
      12 1 101
      12 2 102
      12 3 103
    </Path>

  </Physics>

</GMDSpec>
