#!/bin/bash
if [ -z "$MML_ROOT" ];  then
    echo >&2 "*** error: mml-run: MML_ROOT environment variable not set"
    echo >&2 "this script should be called through matmodlab/bin/mml"
    echo >&2 "and not directly"
    exit 1
fi
while getopts "h" OPTION
do
     case $OPTION in
         h)
	    # run typically operates directly on a python file - which uses
	    # the @matmodlab decorator in matmodlab.py, to parse command line
	    # arguments, here we call matmodlab directly.
	     $MML_PY_EXE $MML_ROOT/matmodlab.py -h
             exit 0
             ;;
     esac
done
$MML_PY_EXE "$@"
